<% provide(:title, 'All users') %>

<% if current_user.admin? %>
<h1>All users</h1>

<ul class="users">
  <% @all_users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
        <% !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>

    </li>
    <% else %>
         <h1>Team Members</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
        <% end %>
  <% end %>
</ul>