<% provide(:title, 'Edit Profile') %>
<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :team_name  %>
      <%= f.text_field :team_name, class: 'form-control' %>
      
      <%= f.label :age %>
      <%= f.number_field :age, in: 1..150, step: 1, class: 'form-control' %>
      
      <%= f.label :phone_number %>
      <%= f.telephone_field :phone_number, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
      <% if current_user.admin? %>
        <%= f.label :Admin, class: "checkbox" %>
          <%= f.check_box :admin %>
        <% end %>

      <%= f.submit "Submit", class: "btn btn-primary left" %>
      
    <% end %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="https://gravatar.com/emails" target="_blank">change</a>
    </div>
  </div>
</div>